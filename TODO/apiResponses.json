// Get all repo issues
query GetAllRepoIssues(
  $owner: String!
  $repo: String!
  $numIssuesToFetch: Int = 30 # How many issues to fetch per page
  $issuesCursor: String = null # For pagination of the issues list
  $issueStates: [IssueState!] = [OPEN] # Filter by issue state (e.g., OPEN, CLOSED)
  $numLabelsPerIssue: Int = 10
  $numAssigneesPerIssue: Int = 10
  $numCommentsPerIssue: Int = 20
  $numSubIssuesPerIssue: Int = 30
  $since: DateTime = "2025-05-21T00:26:35.846Z"
) {
  repository(owner: $owner, name: $repo) {
    issues(
      first: $numIssuesToFetch
      after: $issuesCursor
      states: $issueStates # You can filter by states: [OPEN], [CLOSED], or [OPEN, CLOSED]
      filterBy: {since: $since}
      orderBy: {field: CREATED_AT, direction: DESC} # Example: order by newest created
    ) {
      nodes {
        # --- Fields for each issue ---
        id # Globally unique ID for the issue
        number # Repository-specific issue number

        # Issue Name (Title)
        title

        # Issue URL
        url

        # Issue Description (as MD)
        body

        # Labels for this issue
        labels(first: $numLabelsPerIssue) {
          nodes {
            name
          }
          totalCount
        }

        # Assignees for this issue
        assignees(first: $numAssigneesPerIssue) {
          nodes {
            login
          }
          totalCount
        }

        # Comments for this issue
        comments(first: $numCommentsPerIssue, orderBy: {field: UPDATED_AT, direction: DESC}) {
          nodes {
            author {
              login
            }
            body
            createdAt
            updatedAt
            url
          }
          totalCount
        }

        # Sub-issues (Child Issues) for this issue
        subIssues(first: $numSubIssuesPerIssue) {
          nodes {
            title
            url
            state # e.g., OPEN, CLOSED
            number
            repository {
              nameWithOwner
            }
            assignees(first: 3) {
              nodes {
                login
              }
            }
            labels(first: 3) {
              nodes {
                name
              }
            }
          }
          totalCount
        }
        # --- End fields for each issue ---
      }
      pageInfo {
        endCursor # Use this as the 'issuesCursor' for the next page
        hasNextPage # True if there are more issues to fetch
      }
      totalCount # Total number of issues in the repository matching the filters
    }
  }
}
