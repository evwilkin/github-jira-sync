query GetIssueDetails(
  $owner: String!
  $repo: String!
) {
  repository(owner: $owner, name: $repo) {
    issue(number: 6) {
      # State (Open or Closed)
      state
      
      # Issue Type (Bug, Epic, etc)
      issueType {
        name
      }
      
      # Issue Name (Title)
      title

      # Issue URL
      url

      # Issue Description (as String)
      bodyText

      # Labels
      labels(first: 10) {
        nodes {
          name
        }
        totalCount
      }

      # Assignees
      assignees(first: 10) {
        nodes {
          login
        }
        totalCount
      }

      # Comments
      comments(first: 100, orderBy: {field: UPDATED_AT, direction: DESC}) {
        nodes {
          author {
            login
          }
          bodyText
          createdAt
          updatedAt
        }
        totalCount
      }
			
      subIssuesSummary {
        total
      }
      
      # Sub-issues (Child Issues)
      # GitHub's feature for task lists / child issues within an issue
      subIssues(first: 50) {
        nodes {
          state
          title
          url
          number
          repository {
            nameWithOwner
          }
          assignees(first: 3) {
            nodes {
              login
            }
          }
          labels(first: 10) {
            nodes {
              name
            }
          }
        }
        totalCount
      }
    }
  }
}
